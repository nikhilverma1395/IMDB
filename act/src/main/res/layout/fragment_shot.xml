<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nikhilvermavit.nikhilverma.act.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shot_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_bar_background"
        android:background="@color/accent_material_dark">

        <RelativeLayout
            android:id="@+id/shot_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlighted_text_material_light"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/shot_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/abc_search_url_text_normal"
                android:transitionName="shotImageContainer">

                <ImageView
                    android:id="@+id/shot_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/button_material_light"
                    android:transitionName="shotImage" />

                <FrameLayout
                    android:id="@+id/shot_play_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/accent_material_dark"
                    android:visibility="gone">

                    <View
                        android:id="@+id/shot_play_icon"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:background="@color/accent_material_light" />
                </FrameLayout>

                <ProgressBar
                    android:id="@+id/shot_image_progress_bar"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_launcher" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/shot_comments_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shot_description_container"
                android:background="?android:attr/windowBackground"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:id="@+id/comments_action_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false">

                    <ProgressBar
                        android:id="@+id/comments_progress_bar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:padding="10dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/comments_failure_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_launcher"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/comments_empty_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No comment for this shot (yet)"
                        android:drawableTop="@drawable/ic_launcher"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/shot_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shot_details_container"
                android:background="?android:attr/colorBackground"
                android:elevation="2dp"
>

                <TextView
                    android:id="@+id/shot_description"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:text="Suspended from school; and scared to go home, I was a fool. I'm trapped inside a maze. I shed tears with my baby sister. They showed a young brother love. From havin the world on his shoulders."
                    android:textColorLink="@color/primary_dark_material_light" />

                <TextView
                    android:id="@+id/shot_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shot_description"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/material_blue_grey_900" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/shot_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_container"
                android:background="?attr/colorPrimary"
                android:baselineAligned="false"
                android:elevation="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/abc_ic_clear_mtrl_alpha"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/shot_likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="123"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/abc_ic_menu_cut_mtrl_alpha"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/shot_views_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="6709"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/shot_buckets_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="6709"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/shot_comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="6709"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/shot_image_container"
                android:background="?attr/colorPrimary"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/shot_user_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/abc_ic_commit_search_api_mtrl_alpha"
                    android:padding="2dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="72dp">

                    <TextView
                        android:id="@+id/shot_title"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56dp"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Vacation Design"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/shot_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/shot_title"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Mathieu Marée, "
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/shot_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/shot_user_name"
                        android:layout_below="@+id/shot_title"
                        android:layout_toRightOf="@+id/shot_user_name"
                        android:text="19 Décembre 2014"
                        android:textColor="#ffffff"
                        android:textStyle="italic" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </com.nikhilvermavit.nikhilverma.act.NotifyingScrollView>
    <View
        android:id="@+id/status_bar_background"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</RelativeLayout>