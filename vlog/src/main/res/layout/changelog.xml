<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/me"
            android:layout_width="match_parent"
            android:layout_height="@dimen/changelog_card"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_card_top"
            android:layout_marginLeft="@dimen/margin_card_left_right"
            android:layout_marginRight="@dimen/margin_card_left_right"
            android:layout_marginTop="@dimen/margin_card_top"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nikhilvermavit.vlog.view.CircleImageView
                    android:id="@+id/ima"
                    android:layout_width="@dimen/card_image"
                    android:layout_height="@dimen/card_image"
                    android:layout_margin="@dimen/margin_card_image"
                    android:scaleType="centerInside"
                    android:src="@drawable/im" />

                <TextView
                    android:id="@+id/dad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_card_image"
                    android:layout_toRightOf="@id/ima"
                    android:text="@string/dad"
                    android:textColor="#ff376f51"
                    android:textSize="@dimen/title_font_head" />

                <TextView
                    android:id="@+id/dad_nik"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dad"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="@dimen/margin_card_top"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/ima"
                    android:text="Nikhil Verma"
                    android:textColor="#757575"
                    android:textSize="17sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="@dimen/margin_card_top"
            android:layout_marginRight="@dimen/margin_card_top"
            android:background="#616161" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_card_top"
                android:layout_marginRight="@dimen/margin_card_top"
                android:layout_marginTop="@dimen/margin_card_top"
                android:text="Change log "
                android:textColor="#ff0c973d"
                android:textSize="@dimen/title_font_head"
                android:textStyle="bold" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/howtouse"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:text="How to Use" />
        </RelativeLayout>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_card_top"
            android:layout_marginLeft="@dimen/margin_card_left_right"
            android:layout_marginRight="@dimen/margin_card_left_right"
            android:layout_marginTop="@dimen/margin_card_top"
            android:background="@android:color/white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card1_v"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 1.3"
                    android:textColor="#ff4dbe7e"
                    android:textSize="@dimen/title_font_head" />

                <TextView
                    android:id="@+id/card1_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25/01/16"
                    android:textColor="#ff000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/card1_n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="New"
                    android:textColor="#424242"
                    android:textSize="@dimen/title_font" />

                <TextView
                    android:id="@+id/card1_det"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/new_st"
                    android:textColor="#757575"
                    android:textSize="@dimen/small_texts" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="@dimen/margin_card_top"
            android:layout_marginRight="@dimen/margin_card_top"
            android:background="#616161" />

        <TextView
            android:id="@+id/head_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_card_top"
            android:layout_marginRight="@dimen/margin_card_top"
            android:layout_marginTop="@dimen/margin_card_top"
            android:text="Open source licenses"
            android:textColor="#ff0c973d"
            android:textSize="@dimen/title_font_head"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mdesign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/changelog_card"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_card_top"
            android:layout_marginLeft="@dimen/margin_card_left_right"
            android:layout_marginRight="@dimen/margin_card_left_right"
            android:layout_marginTop="@dimen/margin_card_top"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card2_n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MaterialDesignLibrary"
                    android:textColor="#ff4dbe7e"
                    android:textSize="@dimen/title_font" />

                <TextView
                    android:id="@+id/card2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ivan Navas"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/card2_lic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Apache License , Version 2.0"
                    android:textColor="#616161"
                    android:textSize="@dimen/small_texts" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/medittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/changelog_card"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_card_top"
            android:layout_marginLeft="@dimen/margin_card_left_right"
            android:layout_marginRight="@dimen/margin_card_left_right"
            android:layout_marginTop="@dimen/margin_card_top"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card3_n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MaterialEditText"
                    android:textColor="#ff4dbe7e"
                    android:textSize="@dimen/title_font" />

                <TextView
                    android:id="@+id/card3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kai Zhu (rengwuxian)"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/card3_lic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Apache License , Version 2.0"
                    android:textColor="#616161"
                    android:textSize="@dimen/small_texts" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/androidos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/changelog_card"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_card_top"
            android:layout_marginLeft="@dimen/margin_card_left_right"
            android:layout_marginRight="@dimen/margin_card_left_right"
            android:layout_marginTop="@dimen/margin_card_top"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card4_n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Android Open Source Project"
                    android:textColor="#ff4dbe7e"
                    android:textSize="@dimen/title_font" />

                <TextView
                    android:id="@+id/card4_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Inc."
                    android:textColor="#ff000000"
                    android:textSize="@dimen/title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/card4_lic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Apache License , Version 2.0"
                    android:textColor="#616161"
                    android:textSize="@dimen/small_texts" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/okhtt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/changelog_card"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_card_top"
            android:layout_marginLeft="@dimen/margin_card_left_right"
            android:layout_marginRight="@dimen/margin_card_left_right"
            android:layout_marginTop="@dimen/margin_card_top"
            android:background="@android:color/white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/card5_n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Okhttp"
                    android:textColor="#ff4dbe7e"
                    android:textSize="@dimen/title_font" />

                <TextView
                    android:id="@+id/card5_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Square"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/title_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/card5_lic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Apache License , Version 2.0"
                    android:textColor="#616161"
                    android:textSize="@dimen/small_texts" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>