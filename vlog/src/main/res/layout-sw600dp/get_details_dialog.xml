<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/windowBack">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="380dp"
        android:layout_height="445dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/enter_cred_head"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Enter Your Credentials : "
            android:textColor="#ff2a4ef4"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pass_no_match"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8ff71b2c"
            android:padding="8dp"
            android:text="Passwords Do Not Match !!"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/studVit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:paddingLeft="25dp"
            android:text="Edit the below field as per your Pronto Host"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="420dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:weightSum="5">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/wifi_network_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Network Name:"
                android:text="VIT2.4G"
                android:textSize="18sp"
                 />
            <!--app:baseColor="#fff7d4ff"-->
            <!--app:floatingLabel="highlight"-->
            <!--app:primaryColor="?colorAccent"-->
            <!--app:singleLineEllipsis="true"-->
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/uname_req"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Username"
                android:textSize="18sp"
                 />
            <!--app:baseColor="#ff76ffb6"-->
            <!--app:floatingLabel="highlight"-->
            <!--app:primaryColor="?colorAccent"-->
            <!--app:singleLineEllipsis="true"-->

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pass_reg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Password"

                android:inputType="textPassword"
                android:textSize="18sp"
                 />
            <!--app:baseColor="#ffc1afbc"-->
            <!--app:floatingLabel="highlight"-->
            <!--app:primaryColor="?colorAccent"-->
            <!--app:singleLineEllipsis="true"-->

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pass_confirm_reg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Enter Your Password Again"
                android:inputType="textPassword"
                android:textSize="18sp"
               />
            <!--app:baseColor="#fff7d4ff"-->
            <!--app:floatingLabel="highlight"-->
            <!--app:primaryColor="?colorAccent"-->
            <!--app:singleLineEllipsis="true"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/datepicketop"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:hint="Enter Renewal Date ex:23"
                    android:inputType="number"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="13sp"
                    android:textStyle="italic" />

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/datepicketop"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cal_icm" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/dismiss_reg"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="#ffff7525"
            android:gravity="center"
            android:text="Dismiss" />
    </LinearLayout>
</com.gc.materialdesign.views.ScrollView>