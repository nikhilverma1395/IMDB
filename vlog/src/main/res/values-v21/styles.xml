<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:windowBackground">@color/windowBack</item>
        <item name="android:colorBackground">@color/windowBack</item>
        <item name="colorAccent">#673AB7</item>
    </style>

    <color name="windowBack">#263238</color>

    <style name="custom_theme" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="rateanim">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="fabstyle">
        <item name="android:layout_margin">36dp</item>
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:src">@drawable/ic_add_white_24dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@anim/fab</item>
    </style>

    <style name="firstd">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
</resources>
