<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#856187ff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#3B5998"
        android:id="@+id/toolbar"
        android:elevation="10dp"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/toolbar"
        android:id="@+id/success_logged_in"
        android:text="Logged In Successfully !"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:visibility="gone"
        style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
        android:background="@color/accent_material_light"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loginbaby"
        android:layout_below="@id/success_logged_in"
        android:id="@+id/login_b"
        android:layout_margin="10dp"
        android:text="Login" />


    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_toRightOf="@id/login_b"
        android:layout_below="@id/success_logged_in"
        android:background="#ffadff9c"
        android:layout_width="wrap_content"
        android:text="Reset Credentials"
        android:onClick="resetsprefs"
        android:layout_margin="1dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/logout_b"
        android:layout_below="@id/login_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logoutbaby"
        android:layout_margin="10dp"
        android:text="Logout" />


    <com.gc.materialdesign.views.ProgressBarCircularIndetermininate
        android:layout_width="50dp"
        android:background="@color/accent_material_dark"
        android:layout_height="50dp"
        android:id="@+id/progressBar_vlog"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="gone"
        android:id="@+id/wifi_not_connected"
        android:layout_height="wrap_content">

        <TextView

            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:text="Wifi Not Connected ."
            android:gravity="center"
            android:layout_margin="3dp"
            android:background="@android:color/holo_red_dark"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp" />

        <Button
            android:layout_margin="3dp"
            android:onClick="turnonwifi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Turn On VOLSBB And Connect ."
            android:gravity="center"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/turn_on_wifi"
            android:layout_height="40dp" />
    </LinearLayout>
</RelativeLayout>
